<h1> <%= @restaurant.name %> </h1>
<p> <%= @restaurant.address %> </p>
<p> <%= @restaurant.phone_number %> </p>
<p> <%= @restaurant.category %> </p>
<p> <%= link_to 'Edit this restaurant', edit_restaurant_path %> </p>
<p> <%= link_to 'Review this restaurant', new_restaurant_review_path(@restaurant)  %> </p>
<p> <%= link_to 'Return to index', restaurants_path %> </p>

<h2>Reviews</h2>
<ul>
<% @restaurant.reviews.each do |review| %>
<li>
<p> <%= review.content %> </p>
<p> <%= review.rating %> </p>
</li>
<% end %>
</ul>



