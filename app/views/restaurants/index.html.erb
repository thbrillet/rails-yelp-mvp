<h1>Miam miam restaurants... !</h1>

<%= link_to 'Add a new restaurant', new_restaurant_path %>
<ul>
<% @restaurants.each do |restaurant| %>
  <li>
    <h3> <%= restaurant.name %> </h3>
    <p> <%= restaurant.address %> </p>
    <%= link_to 'See more', restaurant_path(restaurant) %>
    <%= link_to 'Delete this restaurant', restaurant, method: :delete, data: { confirm: 'Are you sure ?' } %>
  </li>
<% end %>
</ul>
